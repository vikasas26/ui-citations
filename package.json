{
  "name": "ui-citations",
  "version": "0.0.9",
  "type": "module",

  "files": ["dist"],

  "main": "./dist/ui-citations.umd.cjs",
  "module": "./dist/ui-citations.js",
  "types": "./dist/types/index.d.ts",
  "style": "./dist/ui-citations.css",

  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/ui-citations.js",
      "require": "./dist/ui-citations.umd.cjs"
    },
    "./ui-citations.css": "./dist/ui-citations.css"
  },

  "scripts": {
    "clean": "rm -rf dist",
    "dev":"vite",
    "build:types": "tsc -p tsconfig.build.json",
    "build:vite": "vite build",
    "build": "npm run clean && npm run build:types && npm run build:vite",
    "release": "npm run build && npm publish"
  }
}
